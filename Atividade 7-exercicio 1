    <script>
        function exibirAlerta() {
           
            var nome = document.getElementById('campoNome').value;
      
            alert('Olá, ' + nome);
        }
    </script>
</head>
<body>
    <h1>Saudação</h1>
    <input type="text" id="campoNome" placeholder="Digite seu nome">
    <button onclick="exibirAlerta()">Saudar</button>
